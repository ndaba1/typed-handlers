---
interface Props {
  title: string;
}

import "@fontsource/calistoga";
import "@fontsource/geist-mono";
import "@fontsource/geist-sans/300.css";
import "@fontsource/geist-sans/400.css";
import "@fontsource/geist-sans/500.css";
import "@fontsource/geist-sans/600.css";
import "@fontsource/geist-sans/700.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="A simple approach to achieving type safety in your Next.js project without sacrificing developer experience or the simplicity of RESTful APIs"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/prism.css" />
    <meta name="generator" content={Astro.generator} />

    <meta name="twitter:card" content="summary_large_image">
    <meta property="og:url" content="https://typed-handlers.vercel.app" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Typed handlers | Type-safe approach to Next.js Route Handlers"
    />
    <meta
      property="og:description"
      content="A simple approach to achieving type safety in your Next.js project without sacrificing developer experience or the simplicity of RESTful APIs"
    />
    <meta
      property="og:image"
      content="https://typed-handlers.vercel.app/bg.png"
    />
    <title>{title}</title>
  </head>
  <body class="bg-gray-100">
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  body {
    font-family: "Geist Sans", system-ui, sans-serif;
  }

  .heading {
    font-family: "Calistoga", system-ui;
  }

  code {
    font-size: 0.9em;
    color: #d400ff;
    font-family:
      "Geist Mono",
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
